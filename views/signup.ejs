<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Create an Account</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      background-color: #fff;
    }

    .signup-container {
      max-width: 400px;
      width: 100%;
      padding: 1px;
      text-align: center;
    }

    .logo {
      max-width: 100px;
      margin-bottom: 20px;
    }

    .form-control {
      border: 2px solid #ced4da;
      border-radius: 5px;
      height: 46px;
    }

    .btn-primary {
      background-color: #000;
      border-color: #000;
      height: 46px;
      color: #fff; /* Set text color to white */
    }

    .btn-primary:hover {
      background-color: #000; /* No hover effect */
      border-color: #000;
    }

    /* Remove underline from <a> tag */
    a {
      text-decoration: none;
    }

    a {
      text-decoration: none;
      color: #000; /* Set link color to black */
    }

    h2 {
      font-weight: bolder;
      font-size: 32px;
    }

    /* Additional style for terms and conditions checkbox */
    .form-check-label {
      font-size: 14px;
    }
  </style>

</head>

<body>

<div class="signup-container">

  <img src="Images/icons8-pinterest.svg" alt="Brand Logo" class="logo">

  <h2 class="text-center mb-4">Create an Account</h2>

  <!-- Name input -->
  <div class="form-group">
    <input type="text" class="form-control" id="inputName" placeholder="Enter your name">
  </div>

  <!-- Email input -->
  <div class="form-group">
    <input type="email" class="form-control" id="inputEmail" placeholder="Enter your email">
  </div>

  <!-- Number input -->
  <div class="form-group">
    <input type="text" class="form-control" id="inputNumber" placeholder="Enter your number">
  </div>

  <!-- Password input -->
  <div class="form-group">
    <input type="password" class="form-control" id="inputPassword" placeholder="Create password">
  </div>

  <!-- Re-enter Password input -->
  <div class="form-group">
    <input type="password" class="form-control" id="inputRePassword" placeholder="Re-enter password">
  </div>

  <!-- Terms and Conditions checkbox -->
  <div class="form-check mb-3">
    <input type="checkbox" class="form-check-input" id="termsCheckbox">
    <label class="form-check-label" for="termsCheckbox">Agree to terms and conditions</label>
  </div>

  <!-- Create Account button -->
  <button type="submit" class="btn btn-primary btn-block">Create Account</button>

</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>

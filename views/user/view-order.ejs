<%- include('../layouts/header.ejs') %>
<%- include('../layouts/nav.ejs')%>

    <div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <ul>
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li class="active">My Orders</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="cart-main-area pt-90 pb-100">
        <div class="container">
            <h3 class="cart-page-title">My Orders</h3>
            <span>

            </span>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <form action="#">
                        <div class="table-content table-responsive cart-table-content">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Shipping Address</th>
                                        <th>Payment Methods</th>
                                        <th>Status</th>
                                        <th>Shipping</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td class="product-thumbnail">
                                            <%= order[0].address %>
                                        </td>
                                        <td class="product-name">
                                            <%= order[0].paymentType %>
                                        </td>
                                        <td class="product-price-cart">
                                            <%= order[0].status %>
                                        </td>
                                        <td class="product-summary">Free</td>
                                        <td class="product-price-cart">₹ <%= order[0].total %>
                                        </td>
                                    </tr>

                                    <tr>
                                        <!-- <td colspan="5" class="text-center">
                                                <img src="/userr/img/content/no orders.jpg" alt="No orders">
                                            </td> -->
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>

                <p></p>
                <div class="cart-main-area pt-90 pb-100">
                    <div class="container">
                        <h3 class="cart-page-title">Products</h3>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <form action="#">
                                    <div class="table-content table-responsive cart-table-content">
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th>Image</th>
                                                    <th>Product Name</th>
                                                    <th>Qty</th>
                                                    <th>Price</th>
                                                    <th>Subtotal</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% order[0].product.forEach(x=> { %>
                                                    <tr>
                                                        <td class="product-thumbnail">
                                                            <img style="height: 100px; width: 100px;"
                                                                src="/img/<%= x.productid.images[0] %>"
                                                                alt="Product Image">
                                                        </td>
                                                        <td class="product-name">
                                                            <%= x.productid.productName %>
                                                        </td>
                                                        <td class="product-price-cart">
                                                            <%= x.qty %>
                                                        </td>
                                                        <td class="product-price-cart">
                                                            ₹<%= x.productid.price %>
                                                        </td>
                                                        <td class="product-price-cart">
                                                            ₹<%= x.singleTotel %>
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <!-- <td colspan="5" class="text-center">
                                                            <img src="/userr/img/content/no orders.jpg" alt="No orders">
                                                        </td> -->
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="cart-shiping-update-wrapper">
                                                <div class="cart-shiping-update">

                                                    <% if(order[0].status=="Return Pending" || order[0].status=="Retrun"
                                                        ){ %>
                                                        <% }else if( order[0].status !="Cancelled" && order[0].status
                                                            !="Delivered" ){ %>
                                                            <button onclick="cancelorder('<%= order[0]._id %>')"
                                                                class="btn btn-dark">cancel order</button>
                                                            <% } else if(order[0].status=="Delivered" ) { %>
                                                                <button class="btn btn-dark"
                                                                    onclick="returnorder('<%= order[0]._id %>')">Retrun
                                                                    your Order</button>
                                                                <% } %>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






    


    

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- JS
============================================ -->

    <script>


        function returnorder(order_Id) {
            event.preventDefault();
            Swal.fire({
                title: 'Are you sure?',
                text: "You wan't to Return this order!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'yes, delete!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/retrun_order",
                        data: {
                            orderId: order_Id
                        },
                        method: 'post',
                        success: (response) => {
                            $('#reloadDiv').load('/wishlist #reloadDiv')
                            console.log(response);
                            Swal.fire({
                                title: 'Success!',
                                text: 'Your order is pending return list',
                                icon: 'success',
                                showConfirmButton: false
                            })

                        }

                    })
                }
            })
        }


        function cancelorder(order_Id) {
            event.preventDefault();
            Swal.fire({
                title: 'Are you sure?',
                text: "You wan't to cancel this order!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'yes, cancel!',
                cancelButtonText: 'No!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/cancel_order",
                        data: {
                            orderId: order_Id
                        },
                        method: 'post',
                        success: (response) => {
                            console.log("waoring")

                            $('#reloadDiv').load('/orders#reloadDiv')
                            console.log(response);
                            Swal.fire({
                                title: 'Success!',
                                text: 'Your Order Cancelled',
                                icon: 'success',
                                showConfirmButton: false
                            })


                        }

                    })
                }
            })
        }

    </script>


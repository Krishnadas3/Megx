<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Create an Account</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  <style>
   body {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      background-color: #fff;
      padding: 10px;
    }

    .signup-container {
      max-width: 400px;
      width: 100%;
      padding: 20px;
      text-align: center;
    }

    .logo {
      max-width: 100px;
      margin-bottom: 20px;
    }

    .form-control {
      border: 2px solid #ced4da;
      border-radius: 5px;
      height: 46px;
    }

    .btn-primary {
      background-color: #000;
      border-color: #000;
      height: 46px;
      color: #fff;
    }

    .btn-primary:hover {
      background-color: #000;
      border-color: #000;
    }

    a {
      text-decoration: none;
      color: #000;
    }

    h2 {
      font-weight: bolder;
      font-size: 28px;
    }

    .form-check-label {
      font-size: 14px;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes fadeOut {
      from {
        opacity: 1;
      }
      to {
        opacity: 0;
      }
    }

    .fade-in {
      animation: fadeIn 1s ease-in;
    }

    .fade-out {
      animation: fadeOut 1s ease-out;
    }

    @media (max-width: 576px) {
      body {
        padding: 0;
      }

      .signup-container {
        padding: 10px;
      }

      .form-control {
        height: 40px;
      }

      .btn-primary {
        height: 40px;
      }

      h2 {
        font-size: 24px;
      }
    }
  </style>

</head>

<body>

  <div class="signup-container">
    <h2 class="text-center mb-4">Signup</h2>


    <!-- <h2 class="text-center mb-4">Signup</h2> -->

    <form action="/user/signup" method="post">
      <!-- Name input -->

      <div class="form-group">
        <input type="text" name="username" id="usernameInput" class="form-control" placeholder="Enter your name"
          autocomplete="off">
        <small id="name-error" style="color: red; display: none;">Invalid name</small>
      </div>

      <!-- Email input -->
      <div class="form-group">
        <input type="email" name="email" id="emailInput" class="form-control" placeholder="Enter your email"
          autocomplete="off">
        <!-- <label class="form-label" for="emailInput"></label> -->
        <small id="email-error" style="color: red; display: none;">Invalid email format</small>
      </div>

      <!-- Phone number input -->
      <div class="form-group">
        <input type="text" name="phonenumber" id="phonenumberInput" class="form-control"
          placeholder="Enter your phone number" autocomplete="off">
        <small id="phonenumber-error" style="color: red; display: none;">Invalid phone number format</small>
      </div>


      <!-- Password input -->
      <div class="form-group">
        <input type="password" name="password" id="passwordInput" class="form-control" id="passwordInput"
          placeholder="Create password">
        <!-- <label class="form-label" for="passwordInput"></label> -->
        <small id="password-error" style="color: red; display: none;">Invalid password format</small>
      </div>

      <!-- Repeat Password input -->
      <div class="form-outline">
        <input type="password" name="repeatPassword" id="repeatPasswordInput" placeholder="Repeat your password"
          class="form-control" />
        <!-- <label class="form-label" for="repeatPasswordInput"></label> -->
        <small id="repeat-password-error" style="color: red; display: none;">Passwords do not match</small>
      </div>
      <br>

      <button type="button" class="btn btn-primary btn-block" onclick="validateAndSubmit()">signup</button>

    </form>
  </div>

  <script>
    function validateAndSubmit() {
      var nameInput = document.getElementById('usernameInput')
      var emailInput = document.getElementById('emailInput')
      var passwordInput = document.getElementById('passwordInput')
      var numberInput = document.getElementById('phonenumberInput'); // Updated ID
      var repeatPasswordInput = document.getElementById("repeatPasswordInput");

      var nameError = document.getElementById('name-error')
      var emailError = document.getElementById('email-error')
      var passwordError = document.getElementById('password-error')
      var repeatPasswordError = document.getElementById("repeat-password-error");
      var phoneNumberError = document.getElementById('phonenumber-error'); // Updated ID


      var isValidName = /^[a-zA-Z\s]{3,}$/.test(nameInput.value)
      var isvalidEmail = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(emailInput.value)
      var isvalidPassword = passwordInput.value.length >= 6
      var isPasswordMatch = passwordInput.value === repeatPasswordInput.value;
      var isValidPhoneNumber = /^\d{10}$/.test(numberInput.value); // Updated regex for phone number


      if (!isValidName) {
        nameError.style.display = "block"
      } else {
        nameError.style.display = "none"
      }

      if (!isvalidEmail) {
        emailError.style.display = "block"
      } else {
        emailError.style.display = "none"
      }

      if (!isvalidPassword) {
        passwordError.style.display = "block"
      } else {
        passwordError.style.display = "none"
      }

      if (!isPasswordMatch) {
        repeatPasswordError.style.display = "block";
      } else {
        repeatPasswordError.style.display = "none";
      }

      if (!isValidPhoneNumber) {
        phoneNumberError.style.display = 'block';
      } else {
        phoneNumberError.style.display = 'none';
      }


      if (isvalidEmail && isValidName && isvalidPassword && isPasswordMatch && isValidPhoneNumber) {
        document.forms[0].submit()
      }
    }
  </script>



  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>

</html>











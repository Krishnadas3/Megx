<%- include('../layouts/nav.ejs')%>


    <div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <ul>
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li class="active">Wishlist </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="cart-main-area pt-90 pb-100">
        <div class="container">
            <h3 class="cart-page-title">Your wishlist items</h3>
            <div class="row">
                <% if(wishlist.length > 0) { %>
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <form action="#">
                        <div class="table-content table-responsive cart-table-content">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Product Name</th>
                                        <th>Price</th>
                                        <th>Add To Cart</th>
                                        <th>Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let i = 0; i < wishlist.length; i++) { %>
                                    <tr>
                                        <td class="product-thumbnail"><a href="#"><img src="/img/<%= wishlist[i].product.images[i] %>" alt="" style="width: 100px; height: 100px;"></a></td>
                                        <td class="product-name"><a href="#"><%= wishlist[i].product.productName %></a></td>
                                        <td class="product-price-cart"><span class="amount">â‚¹<%= wishlist[i].product.price %></span></td>
                                        <td class="product-wishlist-cart"><a onclick="addToCart('<%=wishlist[i].product._id%>')" href="#">add to cart</a></td>
                                        <td class="product-remove"><a href="#" onclick="deleteWish('<%= wishlist[i].product._id %>')"><i class="fa fa-times"></i></a></td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
                <% } else { %>
                <p>No wishlist items in your wishlist.</p>
                <% } %>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function deleteWish(proid) {

            Swal.fire({
                title: 'Are you sure?',
                text: "You wan't to delete!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'yes, delete!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/remove_wishlist",
                        data: {
                            productId: proid
                        },
                        method: 'post',
                        success: (response) => {
                            console.log("waoring")

                            $('#reloadDiv').load('/wishlist #reloadDiv')
                            console.log(response);
                            Swal.fire({
                                title: 'deleted!',
                                text: 'Your deleted',
                                icon: 'success',
                                showConfirmButton: false
                            })
                            //  setTimeout(()=>{
                            //     location.reload()
                            //  },1000);

                        }

                    })
                }
            })
        }



                  <form id="addProduct" action="/admin/addProduct" method="post" enctype="multipart/form-data" onsubmit="validateAndSubmit(event)">
                    <div class="row g-3 mb-3">
                        <!-- Product Information -->
                        <div class="col-xl-8 col-lg-8">
                            <!-- Product information card -->
